{{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.username) }}
    {{ form_row(form.avatar) }}
        {% if oldAvatarFile is empty == false %}
            <img src="{{ asset('uploads/avatars/' ~ oldAvatarFile) }}"/>
        {% endif %}     
    {{ form_row(form.password) }} 
    {{ form_row(form.oldPassword) }}  
    <button class="button">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
