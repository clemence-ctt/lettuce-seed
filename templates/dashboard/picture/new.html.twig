{% extends 'default.html.twig' %}

{% block flash %}
    {# read and display all flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}

{% block title %}New Picture{% endblock %}

{% block body %}
    <h1>Create new Picture</h1>

    {{ include('dashboard/_partials/_picture-form-new.html.twig', {'button_label': 'ALEA JACTA EST'}) }}

    {% set route_parameters = app.request.attributes.get('_route_params') %}
    <a href="{{ path('dashboard_plant_pictures', {'plantId' : route_parameters.plantId}) }}">back to plant photos</a>

{% endblock %}
