{% extends 'default.html.twig' %}

{% block title %}
    My profile
{% endblock %}

{% block flash %}
    {# read and display all flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}

{% block body %}

    <h1>{{ user.username }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>
                    <img class="round-thumb" src="{{ asset('uploads/avatars/' ~ user.avatar) }}"/>
                </td>
            </tr>
        </tbody>
    </table>
    <div>
        <a class="button" href="{{ path('dashboard_profile_edit') }}">Edit my profile</a>
    </div>

{% endblock %}
